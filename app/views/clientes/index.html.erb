<p id="notice"><%= notice %></p>

<div class="container-fluid">

	<h1>Clientes</h1>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col" width="50%">Nome</th>
				<th>Tamanho</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
			<% @clientes.each do |cliente| %>
				<tr>
					<td><%= cliente.id %></td>
					<td><%= cliente.nome %></td>
          <td><%= cliente.tamanho %></td>
          <td><%= link_to 'Show', cliente %></td>
          <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
          <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<br>

<div class="text-end">
	<%= link_to 'New Cliente', new_cliente_path %>
</div>

